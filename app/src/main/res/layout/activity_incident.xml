<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100"
    android:id="@+id/incidentLayout"
    tools:context=".IncidentActivity">

    <Button
        android:id="@+id/incidentToMain"
        android:layout_width="114dp"
        android:layout_weight="7"
        android:layout_height="0dp"
        android:layout_margin="15dp"
        android:text="Retour" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:fontFamily="@font/abril_fatface"
        android:text="Incident"
        android:textAlignment="center"
        android:textSize="24sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:fontFamily="@font/amiri"
        android:text="Moyen de transport concerné:"
        android:textAlignment="viewStart"
        android:textSize="24sp" />
    <LinearLayout
        android:layout_width="match_parent"
    android:layout_weight="9"
    android:layout_height="0dp"
    android:weightSum="100"
        android:layout_marginTop="25dp">
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/horizontalScrollView">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Piéton"
                    android:id="@+id/pietonButton" />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vélo"
                    android:id="@+id/veloButton" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Moto"
                    android:id="@+id/motoButton" />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Voiture"
                    android:id="@+id/voitureButton" />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bus"
                    android:id="@+id/busButton" />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Camion"
                    android:id="@+id/camionButton" />
            </LinearLayout>

        </HorizontalScrollView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="5"
        android:layout_height="0dp"
        android:weightSum="100"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="50"
            android:fontFamily="@font/abril_fatface"
            android:paddingTop="3dp"
            android:text="Ajouter des photos"
            android:textAlignment="center"
            android:textSize="17sp" />

        <Button
            android:id="@+id/add_incident_photo"
            android:background="@drawable/ic_add_white_24dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="12"
            android:drawableStart="@drawable/ic_add_circle_black_24dp" />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="27"
            android:fontFamily="@font/abril_fatface"
            android:paddingTop="3dp"
            android:textAlignment="center"
            android:textSize="17sp"
            android:text="total: "
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/picturesCountShower"
            android:layout_width="0dp"
            android:layout_weight="11"
            android:text="0"
            android:fontFamily="@font/abril_fatface"
            android:paddingTop="3dp"
            android:textAlignment="center"
            android:textSize="17sp"
            android:layout_height="match_parent"/>
        <!--<FrameLayout
            android:id="@+id/fragment_storage_control_container"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="38">
        </FrameLayout>-->
    </LinearLayout>

    <FrameLayout
        android:id="@+id/fragment_picture_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="35">
    </FrameLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:fontFamily="@font/amiri"
        android:text="Information Supplémentaire:"
        android:textAlignment="viewStart"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="15"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine" />
    <Button
        android:id="@+id/publishIncidentButton"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="Publier"
        android:layout_weight="10"/>

</LinearLayout>
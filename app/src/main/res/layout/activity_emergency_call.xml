<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical" android:weightSum="100">

    <RelativeLayout
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:layout_weight="85">

        <Button
            android:id="@+id/samu"
            android:layout_width="match_parent"
            android:layout_height="77dp"
            android:layout_below="@+id/police_secour"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="0dp"
            android:background="#FFFFFF"
            android:drawableStart="@drawable/ic_call_black_24dp"
            android:text="Samu(15)"
            android:textAlignment="viewStart"
            android:textSize="20sp" />

        <Button
            android:id="@+id/pompier"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@+id/general_call"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="0dp"
            android:background="#FFFFFF"
            android:drawableStart="@drawable/ic_call_black_24dp"
            android:text=" Pompier (18)"
            android:textAlignment="viewStart"
            android:textSize="20sp" />

        <Button
            android:id="@+id/general_call"
            android:layout_width="match_parent"
            android:layout_height="74dp"
            android:layout_below="@+id/close_mode_transport"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="11dp"
            android:layout_marginEnd="3dp"
            android:background="#FFFFFF"
            android:drawableStart="@drawable/ic_call_black_24dp"
            android:text="  Général(112)"
            android:textAlignment="viewStart"
            android:textSize="20sp" />


        <Button
            android:id="@+id/police_secour"
            android:layout_width="match_parent"
            android:layout_height="74dp"
            android:layout_below="@+id/pompier"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="0dp"
            android:background="#FFFFFF"
            android:drawableStart="@drawable/ic_call_black_24dp"
            android:text=" Police Sécour(17)"
            android:textAlignment="viewStart"
            android:textSize="20sp" />

    </RelativeLayout>
    <Button
        android:id="@+id/returnFromEmergencyActivity"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="15"
        android:text="Retour" />
</LinearLayout>